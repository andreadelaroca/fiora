@{
    ViewData["Title"] = "Inicio";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"] - Fiora</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/fiora.css" />
</head>
<body>
    <!-- Encabezado con navegación -->
    <header class="bg-light border-bottom mb-4">
        <div class="container d-flex justify-content-between align-items-center py-3">
            <div class="d-flex align-items-center">
                <img src="~/images/logo-fiora.png" alt="Logo Fiora" style="height: 50px; margin-right: 10px;">
                <h1 class="h4 text-danger m-0">Fiora</h1>
            </div>
            <nav>
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link text-danger fw-bold" asp-controller="Home" asp-action="Index">INICIO</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger fw-bold" asp-controller="Catalogo" asp-action="Index">CATÁLOGO</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger fw-bold" asp-controller="Contacto" asp-action="Index">CONTACTO</a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>

    <!-- Sección principal -->
    <main class="container">
        <section class="row align-items-center promocion bg-light p-4 rounded shadow-sm">
            <div class="col-md-6 texto-promocion">
                <h2 class="text-danger">Nuestros ramos más populares</h2>
                <p>Son los más vendidos por una razón, envía un hermoso ramo hoy</p>
                <a asp-controller="Catalogo" asp-action="Index" class="btn btn-danger">Ver Los Más Vendidos</a>
            </div>
            <div class="col-md-6 imagen-promocion">
                <img src="~/images/personas-con-ramos.jpg" alt="Clientes felices con ramos" class="img-fluid rounded">
            </div>
        </section>
    </main>

    <!-- Pie de página -->
    <footer class="bg-light border-top mt-5 py-3">
        <div class="container d-flex justify-content-start align-items-center">
            <a href="#"><img src="~/images/facebook-icon.png" alt="Facebook" style="height: 30px; margin-right: 10px;"></a>
            <a href="#"><img src="~/images/instagram-icon.png" alt="Instagram" style="height: 30px; margin-right: 10px;"></a>
            <a href="#"><img src="~/images/twitter-icon.png" alt="Twitter" style="height: 30px;"></a>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>