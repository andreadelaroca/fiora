@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Fiora - Floristería</title>
    <link rel="stylesheet" href="~/css/fiora.css">
</head>
<body>
    <header>
        <div class="logo">
            <img src="~/images/logo-flor.png" alt="Logo Fiora">
            <h1>Fiora</h1>
        </div>
       
    </header>

    <main>
        <section class="promocion">
            <div class="texto-promocion">
                <h2>nuestros ramos más populares</h2>
                <p>Son los más vendidos por una razón, envía un hermoso ramo hoy</p>
                <a href="#" class="btn-ver">Ver Los Más Vendidos</a>
            </div>
            <div class="imagen-promocion">
                <img src="~/images/personas-con-ramos.jpg" alt="Clientes felices con ramos">
            </div>
        </section>
    </main>

    <footer>
        <div class="redes-sociales">
            <a href="#"><img src="~/images/facebook-icon.png" alt="Facebook"></a>
            <a href="#"><img src="~/images/instagram-icon.png" alt="Instagram"></a>
            <a href="#"><img src="~/images/twitter-icon.png" alt="Twitter"></a>
        </div>
    </footer>
</body>
</html>