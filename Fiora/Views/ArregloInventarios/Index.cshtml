@model IEnumerable<Fiora.Models.ArregloInventario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Arreglo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Inventario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadNecesaria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Arreglo.NombreArreglo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inventario.NombreProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadNecesaria)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
