@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Dashboard (Estático)";
}

<link rel="stylesheet" href="~/css/VistaAdmin/Dashboard.css" />
<style>
.admin-header { border-bottom: 1px solid #e9ecef; padding-bottom: 10px; margin-bottom: 20px; }
.admin-actions .btn { border-radius: 999px; padding: 8px 14px; }
.cards-grid { display: grid; grid-template-columns: repeat(4, minmax(0, 1fr)); gap: 16px; }
.card { background: #fff; border: 1px solid #e9ecef; border-radius: 12px; padding: 16px; box-shadow: 0 1px 2px rgba(0,0,0,0.04); }
.card h3 { font-size: 14px; color: #6c757d; margin: 0 0 6px 0; }
.card .metric { font-size: 30px; font-weight: 800; margin: 0; color: #212529; }
.admin-panels { display: grid; grid-template-columns: repeat(3, minmax(0, 1fr)); gap: 16px; margin-top: 20px; }
.panel { background: #fff; border: 1px solid #e9ecef; border-radius: 12px; padding: 16px; box-shadow: 0 1px 2px rgba(0,0,0,0.04); }
.panel h3 { font-size: 16px; font-weight: 700; margin: 0 0 12px 0; }
.panel ul { list-style: none; padding: 0; margin: 0; }
.panel ul li { padding: 8px 0; border-bottom: 1px solid #e9ecef; }
.panel ul li:last-child { border-bottom: none; }
@@media (max-width: 1000px) {
    .cards-grid { grid-template-columns: repeat(2, minmax(0, 1fr)); }
    .admin-panels { grid-template-columns: 1fr; }
}
</style>

<div class="admin-app">
    <aside class="admin-sidebar">
        <h2>Fiora Admin</h2>
        <nav>
            <a asp-controller="VistaAdmin" asp-action="DashboardStatic">Dashboard</a>
            <a asp-controller="VistaAdmin" asp-action="Clientes">Clientes</a>
            <a asp-controller="VistaAdmin" asp-action="Inventario">Inventario</a>
            <a asp-controller="VistaAdmin" asp-action="Entregas">Entregas</a>
            <a asp-controller="VistaAdmin" asp-action="Reportes">Reportes</a>
        </nav>
    </aside>

    <main class="admin-main">
        <section class="admin-header">
            <h1>Dashboard</h1>
            <div class="admin-actions">
                <a class="btn btn-danger" asp-controller="Account" asp-action="Logout">Cerrar sesión</a>
            </div>
        </section>

        <section class="cards-grid">
            <div class="card">
                <h3>Clientes</h3>
                <p class="metric">124</p>
                <small>Registrados este mes: 12</small>
            </div>
            <div class="card">
                <h3>Inventario</h3>
                <p class="metric">58</p>
                <small>Items bajos: 7</small>
            </div>
            <div class="card">
                <h3>Pedidos Activos</h3>
                <p class="metric">9</p>
                <small>En proceso: 4</small>
            </div>
            <div class="card">
                <h3>Entregas Hoy</h3>
                <p class="metric">3</p>
                <small>Siguiente: 2:30 PM</small>
            </div>
        </section>

        <section class="admin-panels">
            <div class="panel">
                <h3>Clientes recientes</h3>
                <ul>
                    <li>Andrea • andrea@example.com</li>
                    <li>Marcos • marcos@example.com</li>
                    <li>Sofía • sofia@example.com</li>
                    <li>Carlos • carlos@example.com</li>
                </ul>
            </div>
            <div class="panel">
                <h3>Inventario bajo</h3>
                <ul>
                    <li>Rosas rojas • Cantidad: 3</li>
                    <li>Tulipanes • Cantidad: 2</li>
                    <li>Lirios • Cantidad: 5</li>
                </ul>
            </div>
            <div class="panel">
                <h3>Entregas próximas</h3>
                <ul>
                    <li>Pedido #101 • 1:00 PM</li>
                    <li>Pedido #102 • 2:30 PM</li>
                    <li>Pedido #103 • 5:00 PM</li>
                </ul>
            </div>
        </section>

        <section class="panel" style="margin-top:20px;">
            <h3>Notificaciones</h3>
            <ul>
                <li>Nuevo cliente registrado.</li>
                <li>Pedido #102 pasó a "En Proceso".</li>
                <li>Inventario bajo: Rosas rojas.</li>
            </ul>
        </section>
    </main>
</div>
