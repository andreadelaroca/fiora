@{
    ViewData["Title"] = "Registro Administrador";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <!-- Toggle de selección de tipo de registro -->
                    <div class="d-flex justify-content-center mb-3 gap-2">
                        <button type="button" class="btn btn-danger" id="btnAdmin">Administrador</button>
                        <button type="button" class="btn btn-outline-secondary" id="btnCliente">Cliente</button>
                    </div>

                    <h2 class="card-title text-center mb-3" id="formTitle">Crear cuenta de Administrador</h2>
                    <p class="text-muted text-center mb-4" id="formSubtitle">Completa los datos para registrar un administrador.</p>

                    <form method="post" asp-controller="Account" asp-action="RegisterAdmin" id="formAdmin">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <!-- NombreAdmin -->
                        <div class="mb-3">
                            <label class="form-label" for="NombreAdmin">Nombre</label>
                            <input type="text" class="form-control" id="NombreAdmin" name="NombreAdmin" maxlength="100" required />
                        </div>

                        <!-- CorreoAdmin -->
                        <div class="mb-3">
                            <label class="form-label" for="CorreoAdmin">Correo electrónico</label>
                            <input type="email" class="form-control" id="CorreoAdmin" name="CorreoAdmin" maxlength="256" required />
                        </div>

                        <!-- PasswordAdmin -->
                        <div class="mb-3">
                            <label class="form-label" for="PasswordAdmin">Contraseña</label>
                            <input type="password" class="form-control" id="PasswordAdmin" name="PasswordAdmin" maxlength="200" required />
                        </div>

                        <!-- Confirmación -->
                        <div class="mb-3">
                            <label class="form-label" for="PasswordConfirm">Confirmar contraseña</label>
                            <input type="password" class="form-control" id="PasswordConfirm" name="PasswordConfirm" maxlength="200" required />
                        </div>

                        <!-- Estado -->
                        <div class="mb-3">
                            <label class="form-label" for="Estado">Estado</label>
                            <select class="form-select" id="Estado" name="Estado">
                                <option value="Activo" selected>Activo</option>
                                <option value="Inactivo">Inactivo</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-danger w-100">Registrar administrador</button>

                        <div class="text-center mt-3">
                            <small>¿Deseas registrar un cliente? Haz clic en "Cliente". (Lo implementaremos en el siguiente paso).</small>
                        </div>
                    </form>

                    <!-- Placeholder de formulario Cliente (se activará en el siguiente paso) -->
                    <div id="formCliente" class="d-none">
                        <div class="alert alert-info" role="alert">
                            El registro de Cliente se habilitará a continuación. Por ahora, completa el registro de Administrador.
                        </div>
                        <div class="text-center">
                            <a href="/registrarse.html" class="btn btn-outline-secondary">Ir al registro simple de cliente</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const btnAdmin = document.getElementById('btnAdmin');
        const btnCliente = document.getElementById('btnCliente');
        const formAdmin = document.getElementById('formAdmin');
        const formCliente = document.getElementById('formCliente');
        const formTitle = document.getElementById('formTitle');
        const formSubtitle = document.getElementById('formSubtitle');

        function setActive(type) {
            if (type === 'admin') {
                btnAdmin.classList.remove('btn-outline-secondary');
                btnAdmin.classList.add('btn-danger');
                btnCliente.classList.remove('btn-danger');
                btnCliente.classList.add('btn-outline-secondary');
                formAdmin.classList.remove('d-none');
                formCliente.classList.add('d-none');
                formTitle.textContent = 'Crear cuenta de Administrador';
                formSubtitle.textContent = 'Completa los datos para registrar un administrador.';
            } else {
                btnCliente.classList.remove('btn-outline-secondary');
                btnCliente.classList.add('btn-danger');
                btnAdmin.classList.remove('btn-danger');
                btnAdmin.classList.add('btn-outline-secondary');
                formAdmin.classList.add('d-none');
                formCliente.classList.remove('d-none');
                formTitle.textContent = 'Crear cuenta de Cliente';
                formSubtitle.textContent = 'Completa los datos para registrar un cliente.';
            }
        }

        btnAdmin.addEventListener('click', () => setActive('admin'));
        btnCliente.addEventListener('click', () => setActive('cliente'));

        // Estado inicial: administrador activo
        setActive('admin');
    </script>
}
