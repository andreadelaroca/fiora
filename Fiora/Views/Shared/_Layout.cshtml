<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script type="importmap"></script>
    <!-- Local Bootstrap (if present) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- CDN fallback to ensure styles load even if local files are missing -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/Fiora/Fiora.css" />
    @await RenderSectionAsync("Styles", required: false)
    <link rel="stylesheet" href="~/Fiora.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Fiora HEADER -->
    <header class="fiora-header border-bottom">
        <div class="container py-3">
            <div class="row align-items-center">
                <div class="col-4 d-flex align-items-center gap-3">
                    <a href="/" class="d-inline-flex align-items-center">
                        <img src="/images/fiora-logo.png" alt="Logo Fiora" class="fiora-logo fiora-logo-large" />
                    </a>
                </div>
                <div class="col-4 d-flex justify-content-center">
                    <a href="/" class="text-decoration-none">
                        <div class="fiora-brand fiora-brand-large">FIORA</div>
                    </a>
                </div>
                <div class="col-4 d-flex justify-content-end align-items-center gap-3">
                    <a href="/registrarse.html" class="btn fiora-header-btn">Registrarse</a>
                    <a href="/Account/Login" class="btn fiora-header-btn btn-outline">Iniciar Sesión</a>
                </div>
            </div>
            <div class="row pt-3">
                <div class="col-4 text-center">
                    <a href="/" class="fiora-nav-bottom">INICIO</a>
                </div>
                <div class="col-4 text-center">
                    <a href="/catalogo.html" class="fiora-nav-bottom">CATÁLOGO</a>
                </div>
                <div class="col-4 text-center">
                    <a href="/contacto.html" class="fiora-nav-bottom">CONTACTO</a>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Fiora FOOTER -->
    <footer class="fiora-bottom-strip">
        <div class="container py-2 text-center">
            <span>Fiora 2025 - V.1.1</span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- CDN fallback JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
